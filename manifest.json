{
  "manifest_version": 3,
  "name": "WoW Global Alert & News",
  "version": "1.6",
  "permissions": ["notifications", "alarms", "storage"],
  "host_permissions": [
    "https://www.wowhead.com/*",
    "https://es.wowhead.com/*",
    "https://news.blizzard.com/*",
    "https://api.mymemory.translated.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}